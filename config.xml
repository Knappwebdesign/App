<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"

   xmlns:gap   = "http://phonegap.com/ns/1.0"
   id          = "com.phonegap.example"
   version     = "1.0.0"
   versionCode = "10" >

   <!-- versionCode is optional and Android only -->

   <preference name="phonegap-version" value="3.1.0" />

   <!-- Apple device targeting -->
   <preference name="target-device" value="universal" />

   <!-- Full Screen -->
   <preference name="fullscreen" value="true" />

   <!-- Application -->
   <preference name="target-device" value="universal" />

   <!-- Glossy application icon -->
   <preference name="prerendered-icon" value="true" />

   <!-- Keeping application in portrait -->
   <preference name="orientation" value="portrait" />

   <name>Config.xml</name>

   <description>
      An example for phonegap build docs.
   </description>

   <author href="http://knappwebdesign.net" email="Brandon@knappwebdesign.net">
      Brandon Knapp
   </author>

   <!-- Icon -->
      <!-- iPhone / iPod Touch  -->
      <icon src="icon-60.png" gap:platform="ios" width="60" height="60" />
      <icon src="icon-60@2x.png" gap:platform="ios" width="120" height="120" />

      <!-- iPad -->
      <icon src="icon-76.png" gap:platform="ios" width="76" height="76" />
      <icon src="icon-76@2x.png" gap:platform="ios" width="152" height="152" />

   <!-- Splash Screen -->
      <!-- iPhone and iPod touch -->
      <gap:splash src="Default.png" gap:platform="ios" width="320" height="480" />

      <!-- iPhone 5 / iPod Touch (5th Generation) -->
      <gap:splash src="Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

      <!-- iPad -->
      <gap:splash src="Default-Portrait.png" gap:platform="ios" width="768" height="1024" />

      <!-- Retina iPad -->
      <gap:splash src="Default-Portrait.png" gap:platform="ios" width="1536" height="2048" />

   <!-- Plugins -->

      <!-- InApp Browser -->
      <gap:plugin name="org.apache.cordova.inappbrowser" version="0.2.4" />

      <!-- Camera -->
      <gap:plugin name="org.apache.cordova.camera" version="0.2.9" />

      <!-- Contacts -->
      <gap:plugin name="org.apache.cordova.contacts" version="0.2.9" />

      <!-- Files -->
      <gap:plugin name="org.apache.cordova.file" version="1.0.1" />

      <!-- Geolocation -->
      <gap:plugin name="org.apache.cordova.geolocation" version="0.3.6" />

   <!-- This allows your app to load assets from all *.phongap.com domains -->
      <access origin="http://phonegap.com" subdomains="true" />

</widget>
